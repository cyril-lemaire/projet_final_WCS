{% extends 'QuidditchBundle:player:template.html.twig' %}

{% block body %}
    <h1>Player</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ player.name }}</td>
            </tr>
            <tr>
                <th>Exp</th>
                <td>{{ player.exp }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ player.age }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>
                    {% if player.picture %}
                        <img src="{{ asset(player.picture) }}" alt="Picture of {{ player.name }}" width="200">
                    {% else %}
                        <p>No picture available for this player!</p>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Exhaust</th>
                <td>{{ player.exhaust }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('player_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('player_edit', { 'id': player.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
